<h3>登録済み一覧</h3>

<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
 <% end %>

<table>
   <thead>
     <tr>
       <th>画像</th>
       <th>施設名</th>
       <th>紹介文</th>
       <th>料金</th>
       <th>作成日</th>
     </tr>
   </thead>

   <tbody>
   <% @rooms.each do |room| %>
  <tr>

  <%= room.image %>
  <td><%= room.room_name %></td>  
  <td><%= room.details %></td>
  <td><%= room.price %></td>
  <td><%= room.created_at.to_s(:datetime_jp)%></td>
  </tr>
   <% end %>
 </tbody>
</table>

<p><%= link_to "新規登録", :new_room %></p>