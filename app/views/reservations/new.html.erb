<h2>施設予約</h2>

<%= form_with model: @reservation do |f| %>
    <table>
      <tr>
        <th><%= f.label :check_in ,"チェックイン" %></th>
        <td><%= f.datetime_local_field :check_in %></td>
      </tr>
  
      <tr>
      <th><%= f.label :check_out ,"チェックアウト" %></th>
      <td><%= f.datetime_local_field :check_out %></td>
    </tr>
  
      <tr>
        <th><%= f.label :person ,"人数" %></th>
        <td><%= f.text_field :person %></td>
      </tr>
    </table>
  
    <div>
     <ul>
       <li><%= f.submit "予約完了する"%></li>
       <li><%= link_to "予約一覧に戻る", :reservations %></li>
     </ul>
   </div>
 <% end %>